{
  "name": "smartthings-smartapp",
  "version": "1.0.0",
  "private": true,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/lanfear/smartthings-smartapp.git"
  },
  "description": "JavaScript/TypeScript library for using SmartThings APIs",
  "author": "Joseph M. Deming",
  "homepage": "https://github.com/lanfear/smartthings-smartapp",
  "bugs": "https://github.com/lanfear/smartthings-smartapp/issues",
  "dependencies": {
    "@smartthings/file-context-store": "^0.0.1",
    "@smartthings/smartapp": "^2.6.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.2.6",
    "express-slow-down": "^1.4.0",
    "express-sse-ts": "^1.0.2",
    "helmet": "^4.4.1",
    "http-status-codes": "^2.1.4",
    "simple-json-db": "^1.2.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.1",
    "@types/node": "^16.10.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-techsmith": "^2.4.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "ts-node": "10.2.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "lint": "eslint --cache --color **/*.{js,jsx,ts,tsx}",
    "lint-fix": "eslint --cache --color **/*.{js,jsx,ts,tsx} --fix",
    "build": "tsc",
    "prod": "node build/server.js",
    "start": "node --loader ts-node/esm ./server.ts",
    "tunnel": "ngrok http 9190 --log=stdout"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "node_modules/",
      "data/",
      "build/"
    ],
    "extends": [
      "techsmith/es6"
    ],
    "rules": {
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "extends": [
          "techsmith/ts"
        ],
        "rules": {
          "indent": "off",
          "@typescript-eslint/indent": [
            "error",
            2,
            {
              "SwitchCase": 1,
              "FunctionDeclaration": {
                "parameters": "first"
              },
              "FunctionExpression": {
                "parameters": "first"
              }
            }
          ]
        }
      }
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "project": "/server/tsconfig.json"
    },
    "globals": {
      "process": "readonly"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
