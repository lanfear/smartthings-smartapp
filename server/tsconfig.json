{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "build",
        "paths": {
            "*": [
                "node_modules/*",
                "types/*",
                "*.d.ts"
            ]
        }
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules/*",
        "types/*"
    ]
}