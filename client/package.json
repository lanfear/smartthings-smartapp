{
  "name": "smartthings-smartapp",
  "version": "1.0.0",
  "private": true,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/lanfear/smartthings-smartapp.git"
  },
  "description": "JavaScript/TypeScript library for using SmartThings APIs",
  "author": "Joseph M. Deming",
  "homepage": "https://github.com/lanfear/smartthings-smartapp",
  "bugs": "https://github.com/lanfear/smartthings-smartapp/issues",
  "dependencies": {
    "@smartthings/core-sdk": "^7.1.1",
    "ace-builds": "^1.24.1",
    "assert": "^2.0.0",
    "buffer": "^6.0.3",
    "bulma": "^0.9.3",
    "crypto-browserify": "^3.12.0",
    "dayjs": "^1.11.9",
    "i18next": "^23.4.4",
    "i18next-browser-languagedetector": "^7.1.0",
    "i18next-chained-backend": "^4.4.0",
    "i18next-http-backend": "^2.2.1",
    "i18next-localstorage-backend": "^4.1.1",
    "react": "^17.0.2",
    "react-ace": "^9.5.0",
    "react-device-detect": "^2.2.3",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dnd-touch-backend": "^16.0.1",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.16.1",
    "react-router-dom": "^6.15.0",
    "react-sse-hooks": "^1.0.5",
    "sass": "^1.77.8",
    "stream-browserify": "^3.0.0",
    "styled-components": "^5.3.3",
    "swr": "^1.2.2",
    "typescript": "^5.1.6",
    "use-hooks": "^2.0.0-rc.5",
    "web-vitals": "^3.4.0"
  },
  "devDependencies": {
    "@dotenv-run/esbuild": "^1.4.0",
    "@svgr/core": "^8.1.0",
    "@svgr/plugin-jsx": "^8.1.0",
    "@svgr/plugin-prettier": "^8.1.0",
    "@svgr/plugin-svgo": "^8.1.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.10",
    "@types/react-router-dom": "^5.3.2",
    "@types/styled-components": "^5.1.15",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "dotenv": "^16.4.5",
    "esbuild": "^0.23.1",
    "esbuild-sass-plugin": "^3.3.1",
    "esbuild-scss-modules-plugin": "^1.1.1",
    "eslint-config-techsmith": "^3.2.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "npm-watch": "^0.13.0",
    "replace-in-file": "^7.1.0"
  },
  "scripts": {
    "dev": "npm-watch dev-stack",
    "dev-stack": "npx concurrently -c gray,white \"npm:dev-http-server\" \"npm:build:watch\"",
    "dev-http-server": "npx -p local-web-server -p dotenv-cli -p cross-replace -c \"cd ./build && dotenv -e ../.env -- cross-replace ws --port %SMARTAPP_WEBHARNESS_PORT% --spa index.html\"",
    "build": "npm run build:precompile && node build/bundle.js",
    "build:precompile": "esbuild ./tool/bundle.ts --bundle --platform=node --sourcemap=inline --outfile=./build/bundle.js --log-level=warning --packages=external",
    "build:watch": "npm-watch build",
    "lint": "npx concurrently -n tsc,lint -c cyan,green \"tsc --noEmit\" \"eslint --cache --color **/*.{js,jsx,ts,tsx}\"",
    "lint:watch": "npm-watch lint",
    "lint-fix": "eslint --cache --color **/*.{js,jsx,ts,tsx} --fix",
    "test": "react-app-rewired test"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "node_modules/",
      "data/",
      "build/"
    ],
    "extends": [
      "techsmith/es6",
      "techsmith/react"
    ],
    "rules": {
      "no-nested-ternary": "off",
      "no-console": "warn",
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.ts",
          "**/*.tsx"
        ],
        "extends": [
          "techsmith/ts",
          "techsmith/react-ts"
        ],
        "rules": {
          "no-nested-ternary": "off",
          "indent": "off",
          "no-console": "warn",
          "@typescript-eslint/no-non-null-assertion": "off",
          "@typescript-eslint/ban-types": "off",
          "@typescript-eslint/indent": [
            "error",
            2,
            {
              "SwitchCase": 1,
              "FunctionDeclaration": {
                "parameters": "first"
              },
              "FunctionExpression": {
                "parameters": "first"
              }
            }
          ]
        }
      }
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "project": "./tsconfig.json"
    },
    "globals": {
      "process": "readonly"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "overrides": {
    "@typescript-eslint/eslint-plugin": "$@typescript-eslint/eslint-plugin",
    "esbuild-reason": "because version of @dotenv-run/esbuild@1.4.0",
    "esbuild": "$esbuild",
    "react-reason": "because version use-hooks@2.0.0-rc.5",
    "react": "$react"
  },
  "watch": {
    "dev-stack": {
      "patterns": [
        ".env",
        "package.json"
      ],
      "runOnChangeOnly": false,
      "quiet": true
    },
    "build": {
      "patterns": [
        "public/index.html",
        "public/**/*.json",
        "src/**/*.ts",
        "src/**/*.tsx"
      ],
      "extensions": "html,json,ts,tsx",
      "runOnChangeOnly": false,
      "quiet": true
    },
    "lint": {
      "patterns": [
        "src/**/*.ts",
        "src/**/*.tsx"
      ],
      "extensions": "ts,tsx",
      "runOnChangeOnly": false,
      "quiet": true
    }
  }
}
