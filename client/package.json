{
  "name": "smartthings-smartapp",
  "version": "1.0.0",
  "private": true,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/lanfear/smartthings-smartapp.git"
  },
  "description": "JavaScript/TypeScript library for using SmartThings APIs",
  "author": "Joseph M. Deming",
  "homepage": "https://github.com/lanfear/smartthings-smartapp",
  "bugs": "https://github.com/lanfear/smartthings-smartapp/issues",
  "dependencies": {
    "@smartthings/core-sdk": "^3.4.0",
    "ace-builds": "^1.4.13",
    "assert": "^2.0.0",
    "buffer": "^6.0.3",
    "bulma": "^0.9.3",
    "crypto-browserify": "^3.12.0",
    "dayjs": "^1.11.0",
    "i18next": "^21.6.14",
    "i18next-browser-languagedetector": "^6.1.2",
    "i18next-chained-backend": "^3.0.2",
    "i18next-http-backend": "^1.3.1",
    "i18next-localstorage-backend": "^3.1.3",
    "node-sass": "^8.0.0",
    "react": "^17.0.2",
    "react-ace": "^9.5.0",
    "react-device-detect": "^2.2.2",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dnd-touch-backend": "^16.0.1",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.16.1",
    "react-router-dom": "^6.2.2",
    "react-scripts": "^5.0.1",
    "react-sse-hooks": "^1.0.5",
    "stream-browserify": "^3.0.0",
    "styled-components": "^5.3.3",
    "swr": "^1.2.2",
    "typescript": "^4.9.4",
    "use-hooks": "^2.0.0-rc.5",
    "web-vitals": "^2.1.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.10",
    "@types/react-router-dom": "^5.3.2",
    "@types/styled-components": "^5.1.15",
    "eslint-config-techsmith": "^2.4.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "react-app-rewired": "^2.2.1"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-app-rewired eject",
    "lint": "eslint --cache --color **/*.{js,jsx,ts,tsx}",
    "lint-fix": "eslint --cache --color **/*.{js,jsx,ts,tsx} --fix"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "node_modules/",
      "data/",
      "build/"
    ],
    "extends": [
      "techsmith/es6",
      "techsmith/react"
    ],
    "rules": {
      "no-nested-ternary": "off",
      "no-console": "warn",
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.ts",
          "**/*.tsx"
        ],
        "extends": [
          "techsmith/ts",
          "techsmith/react-ts"
        ],
        "rules": {
          "no-nested-ternary": "off",
          "indent": "off",
          "no-console": "warn",
          "@typescript-eslint/no-non-null-assertion": "off",
          "@typescript-eslint/indent": [
            "error",
            2,
            {
              "SwitchCase": 1,
              "FunctionDeclaration": {
                "parameters": "first"
              },
              "FunctionExpression": {
                "parameters": "first"
              }
            }
          ]
        }
      }
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "project": "./tsconfig.json"
    },
    "globals": {
      "process": "readonly"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
